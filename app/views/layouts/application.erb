<html>
	<head>
		<title>Twitter Clone</title>
	</head>
	<body>
		<% if logged_in? %>
			<form action="/" method="get">
				<input type="submit" value="Home">
			</form>
			<form action="/sessions/<%=current_user.id%>" method="post">
				<input type="submit" value="Logout">
			</form>
			<p>You are logged in as <%= current_user.username %></p>
		<% end %>
		<%= yield %>
	</body>
</html>